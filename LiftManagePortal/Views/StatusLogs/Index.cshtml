@model IEnumerable<LiftManagePortal.Models.StatusLog>

@{
    ViewBag.Title = "Index";
}

<h2>该表保存了所有发送到EventHub的数据，维护了所有设备的状态信息。</h2>

<p>
    @Html.ActionLink("导入新的设备日志信息", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeviceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPUUsage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiskUsage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemoryUsage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventEnqueuedUtcTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPUUsage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiskUsage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemoryUsage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventEnqueuedUtcTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StatusLogId }) |
            @Html.ActionLink("Details", "Details", new { id=item.StatusLogId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StatusLogId })
        </td>
    </tr>
}

</table>
